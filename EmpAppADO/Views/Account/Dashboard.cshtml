@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .dashboard-container {
        max-width: 700px;
        margin: 50px auto;
        padding: 30px;
        background-color: #f8f9fa;
        border-radius: 16px;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .dashboard-container:hover {
            transform: scale(1.01);
        }

    .dashboard-title {
        font-size: 2.5rem;
        color: #0d6efd;
        margin-bottom: 20px;
    }

    .dashboard-subtitle {
        font-size: 1.25rem;
        color: #6c757d;
    }
</style>

<div class="dashboard-container text-center">
    <h1 class="dashboard-title">Welcome, @ViewBag.Username!</h1>
</div>
